<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/yellow">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/doctor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pacifico_regular"
        android:text="Be Healthy..."
        android:textSize="42sp"
        android:textColor="@color/card_select_gray"
        app:layout_constraintEnd_toEndOf="@+id/iv_splash_logo"
        app:layout_constraintStart_toStartOf="@+id/iv_splash_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash_logo" />

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate your BMI"
        android:fontFamily="@font/raleway"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/card_select_gray"
        app:layout_constraintEnd_toEndOf="@+id/tv_head"
        app:layout_constraintStart_toStartOf="@+id/tv_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_head" />

</androidx.constraintlayout.widget.ConstraintLayout>